@model CheeseMVC.ViewModels.AddCategoryViewModel

@{
    ViewData["Title"] = "Add Category";
}

<h2>Add Category</h2>

<form asp-controller="Category" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control input-sm" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <input class="btn btn-sm btn-info" type="submit" value="Add Category" />
    </div>
</form>
